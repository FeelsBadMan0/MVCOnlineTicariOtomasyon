@using MVCOnlineTicariOtomasyon.Models.Sınıflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalemleri Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"><b>FATURA ID: </b>@ViewBag.ftr</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>AÇIKLAMA</th>
        <th>MİKTAR</th>
        <th>BİRİM FİYAT</th>
        <th>TUTAR</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.FaturaKalemID</td>
            <td>@p.Aciklama</td>
            <td>@p.Miktar</td>
            <td>@p.BirimFiyat</td>
            <td>@p.Tutar</td>
        </tr>
    }

</table>

<a href="/Fatura/YeniKalem/@ViewBag.ftr" class="btn btn-primary">Yeni Kalem Girişi</a>

