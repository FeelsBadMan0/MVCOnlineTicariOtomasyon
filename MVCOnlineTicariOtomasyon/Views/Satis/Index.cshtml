@using MVCOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table id="tbl1" class="table table-dark">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.UrunID</td>
            <td>@s.Urun.UrunAd</td>
            <td>@s.Cariler.CariAd @s.Cariler.CariSoyad</td>
            <td>@s.Personel.PersonelAd @s.Personel.PersonelSoyad</td>
            <td>@s.Adet</td>
            <td>@s.Fiyat ₺</td>
            <td>@s.ToplamTutar ₺</td>
            <td>@s.Tarih.ToString("dd-MMMM-yyyy")</td>
            <td><a href="/Satis/SatisGetir/@s.SatisID" class="btn btn-sm btn-info">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@s.SatisID" class="btn btn-sm btn-warning">Detaylar</a></td>
        </tr>

    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-primary">Satış Yap</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>



<script>
    $('#tbl1').dataTable({
        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"

        }
});
</script>



