@using MVCOnlineTicariOtomasyon.Models.Sınıflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-dark">
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.CariAd</td>
            <td>@c.CariSoyad</td>
            <td>@c.CariSehir</td>
            <td>@c.CariMail</td>
            <td><a href="/Cari/CariSil/@c.CariID" class="btn btn-sm btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@c.CariID" class="btn btn-sm btn-info">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@c.CariID" class="btn btn-sm btn-warning">Satış Geçmişi</a></td>
        </tr>

    }
</table>
<a href="/Cari/YeniCari" class="btn btn-primary">Yeni Cari Ekle</a>

